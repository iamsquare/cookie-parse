{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/lib",
    "sourceMap": false,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "exclude": ["node_modules/**/*", "dist/**/*", "tests/**/*"]
}
